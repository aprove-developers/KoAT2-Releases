USE_OCAMLFIND = true

OCAMLPACKS[] =
    Z3
    batteries

OCAMLFLAGS += -thread

NATIVE_ENABLED = true
BYTE_ENABLED = true

FILES[] =
    ID
    Valuation
    Variables
    Monomials
    Polynomials
    Powers
    ScaledMonomials
    PolyTypes
    StdPoly

LIB = poly

.DEFAULT: $(OCamlLibrary $(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     *~
