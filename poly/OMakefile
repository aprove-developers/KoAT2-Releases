USE_OCAMLFIND = true

OCAMLPACKS[] =
    batteries

OCAMLFLAGS += -thread

NATIVE_ENABLED = true
BYTE_ENABLED = true

FILES[] =
    ID
    Valuation
    RenameMap
    Monomials
    Polynomials
    MinMaxPolynomial
    Powers
    ScaledMonomials
    PolyTypes
    StdPoly

LIB = poly

OCamlLibrary($(LIB), $(FILES))
InterfaceDoc($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     *.idoc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     *~
