USE_OCAMLFIND = true

MENHIR_ENABLED = true

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAMLINCLUDES[] =
    ../poly

OCAML_LIBS[] =
    ../poly/poly

GEN_FILES[] =
    PolynomialParser.ml
    PolynomialParser.mli
    PolynomialLexer.ml

OCamlGeneratedFiles($(GEN_FILES))

FILES[] =
    PolynomialParser
    PolynomialLexer

LIB = parser

.DEFAULT: $(OCamlLibrary $(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     $(GEN_FILES) \
     *~
