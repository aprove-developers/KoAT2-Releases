USE_OCAMLFIND = true

MENHIR_ENABLED = true
MENHIR_FLAGS += --infer

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAMLPACKS[] =
    batteries

OCAMLINCLUDES[] =
    ../poly
    ../constraints

OCAML_LIBS[] =
    ../poly/poly
    ../constraints/constraints

GEN_FILES[] =
    PolynomialConstraintsParser.ml
    PolynomialConstraintsParser.mli
    PolynomialConstraintsLexer.ml

OCamlGeneratedFiles($(GEN_FILES))

FILES[] =
    PolynomialConstraintsParser
    PolynomialConstraintsLexer

LIB = poly_constraint_parser

OCamlLibrary($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     $(GEN_FILES) \
     *~
