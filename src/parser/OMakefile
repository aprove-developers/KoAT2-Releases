USE_OCAMLFIND = true

MENHIR_ENABLED = true
MENHIR_FLAGS += --infer

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAMLPACKS[] =
    batteries

OCAMLINCLUDES[] =
    ../poly
    ../constraints
    ../transitionsystem

OCAML_LIBS[] =
    ../poly/poly
    ../constraints/constraints
    ../transitionsystem/transitionsystem

GEN_FILES[] =
    Parser.ml
    Parser.mli
    Lexer.ml

OCamlGeneratedFiles($(GEN_FILES))

FILES[] =
    Parseable
    Parser
    Lexer
    Readers

LIB = parser

OCamlLibrary($(LIB), $(FILES))
InterfaceDoc($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     *.idoc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     $(GEN_FILES) \
     *~
