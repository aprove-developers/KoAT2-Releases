USE_OCAMLFIND = true

OCAMLPACKS[] =
    batteries

OCAMLINCLUDES[] =
    ../poly

OCAMLFLAGS += -thread

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly

# Include all .ml files
FILES[] = $(removesuffix .ml, $(glob *.ml))

LIB = constraints

OCamlLibrary($(LIB), $(FILES))
InterfaceDoc($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     *.idoc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     *~
