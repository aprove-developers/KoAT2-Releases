USE_OCAMLFIND = true
OCAMLOPTFLAGS += -p -g -thread -ccopt -static

OCAMLPACKS[] =
    batteries
    apron
    apron.octD
    apron.boxD
    ppx_deriving_cmdliner
    ppx_deriving.show
    z3
    ocamlgraph
    fpath

OCAMLINCLUDES[] =
    ../util
    ../poly
    ../constraints
    ../smt
    ../transitionsystem
    ../parser
    ../bounds
    ../preprocessors

OCAML_LIBS[] =
    ../util/util
    ../poly/poly
    ../constraints/constraints
    ../smt/smt
    ../transitionsystem/transitionsystem
    ../parser/parser
    ../bounds/bounds
    ../preprocessors/preprocessors

# Include all .ml files
FILES[] = $(removesuffix .ml, $(glob *.ml))

LIB = main

OCamlProgram(koat2, $(FILES))

install: koat2


InterfaceDoc($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     *.idoc \
     *.cmo \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     koat2 koat2.opt \
