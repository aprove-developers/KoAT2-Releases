USE_OCAMLFIND = true
OCAMLOPTFLAGS += -g -p

OCAMLPACKS[] =
    batteries
    apron
    apron.octD
    apron.boxD
    ppx_deriving_cmdliner
    ppx_deriving.show
    Z3
    ocamlgraph
    fpath

OCAMLINCLUDES[] =
    ../util
    ../poly
    ../constraints
    ../smt
    ../transitionsystem
    ../bounds
    ../preprocessors
    ../parser

OCAML_LIBS[] =
    ../util/util
    ../poly/poly
    ../constraints/constraints
    ../smt/smt
    ../transitionsystem/transitionsystem
    ../bounds/bounds
    ../preprocessors/preprocessors
    ../parser/parser

# Include all .ml files
FILES[] = $(removesuffix .ml, $(glob *.ml))

LIB = main

OCamlProgram(koat, $(FILES))

install: koat

InterfaceDoc($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     *.idoc \
     *.cmo \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     koat koat.opt \
     *~
