USE_OCAMLFIND = true

OCAMLPACKS[] =
    batteries
    ppx_deriving_cmdliner
    ppx_deriving.show
    Z3
    ocamlgraph

OCAMLINCLUDES[] =
    ../poly
    ../constraints
    ../smt
    ../transitionsystem
    ../bounds
    ../preprocessors
    ../parser

OCAMLFLAGS += -thread

OCAML_LIBS[] =
    ../poly/poly
    ../constraints/constraints
    ../smt/smt
    ../transitionsystem/transitionsystem
    ../bounds/bounds
    ../preprocessors/preprocessors
    ../parser/parser

# Include all .ml files
FILES[] = $(removesuffix .ml, $(glob *.ml))

LIB = main

OCamlProgram(koat, $(FILES))

install: koat

InterfaceDoc($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     *.idoc \
     *.cmo \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     koat koat.opt \
     *~
