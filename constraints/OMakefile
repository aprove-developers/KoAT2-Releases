USE_OCAMLFIND = true

OCAMLPACKS[] =
    Z3
    batteries

OCAMLINCLUDES[] =
    ../poly

OCAMLFLAGS += -thread

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly

FILES[] =
    ConstraintTypes
    PolynomialConstraintsAtoms

LIB = constraints

OCamlLibrary($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     *~
