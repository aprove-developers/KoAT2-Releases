USE_OCAMLFIND = true

OCAMLPACKS[] =
    Z3
    batteries

OCAMLINCLUDES[] =
    ../poly

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly

FILES[] =
    PolynomialConstraintsAtoms
    ConstraintTypes

LIB = constraints

.DEFAULT: $(OCamlLibrary $(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     *~
