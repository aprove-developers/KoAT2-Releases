USE_OCAMLFIND = true

OCAMLPACKS[] =
    ocamlgraph

OCAMLINCLUDES += ../poly

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS += ../poly/poly

FILES[] =
    Locations
    Transitions
    TransitionGraph

LIB = transitionsystem

OCamlLibrary($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     *~
