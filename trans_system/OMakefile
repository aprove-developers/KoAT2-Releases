USE_OCAMLFIND = true

OCAMLPACKS[] =
    batteries
    ocamlgraph

OCAMLINCLUDES[] =
    ../poly
    ../constraints

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly
    ../constraints/constraints

FILES[] =
    TransitionGraphTypes
    TransitionGraphImpl
    TransitionGraph

LIB = transitionsystem

OCamlLibrary($(LIB), $(FILES))

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(LIB).a $(LIB).cmxa $(LIB).cma \
     *~
