USE_OCAMLFIND = true

OCAMLPACKS[] =
    Z3
    batteries
    ocamlgraph
    oUnit

OCAMLINCLUDES[] =
    ../poly 
    ../constraints
    ../parser
    ../smt
    ../transitionsystem

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly
    ../constraints/constraints
    ../parser/parser
    ../smt/smt
    ../transitionsystem/transitionsystem

# Include all .ml files
FILES[] = $(removesuffix .ml, $(glob *.ml))

OCamlProgram(Test, $(FILES))

install: Test
    ./Test

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     Test Test.opt \
     *~ \
     *.log \
     *.cache
