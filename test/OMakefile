USE_OCAMLFIND = true

OCAMLPACKS[] =
    Z3
    batteries
    oUnit

OCAMLINCLUDES[] =
    ../poly
    ../parser
    ../constraints

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly
    ../parser/parser
    ../constraints/constraints

TESTS[] =
    PolynomialsTest
    PolynomialConstraintsTest

OCamlProgram(PolynomialsTest, PolynomialsTest)
OCamlProgram(PolynomialConstraintsTest, PolynomialConstraintsTest)

.DEFAULT: $(TESTS)
    ./PolynomialsTest
    ./PolynomialConstraintsTest

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(TESTS)))) \
     $(TESTS) \
     *~ \
     *.log \
     *.cache
