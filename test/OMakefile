USE_OCAMLFIND = true

OCAMLPACKS[] =
    Z3
    batteries
    ocamlgraph
    oUnit

OCAMLINCLUDES[] =
    ../poly 
    ../constraints
    ../parser
    ../smt
    ../transitionsystem

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly
    ../constraints/constraints
    ../parser/parser
    ../smt/smtsolver
    ../transitionsystem/transitionsystem

TESTS[] =
    PolynomialsTest
    AtomTest
    ConstraintsTest
    SMTTest
    TransitionGraphTest

OCamlProgram(Test, Mocks $(TESTS) Suite)

.DEFAULT: Test
    ./Test

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(TESTS)))) \
     $(filter-proper-targets $(glob $(addsuffix .*, Mocks))) \
     $(filter-proper-targets $(glob $(addsuffix .*, Suite))) \
     $(TESTS) \
     *~ \
     *.log \
     *.cache
