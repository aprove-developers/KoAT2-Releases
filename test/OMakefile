USE_OCAMLFIND = true

OCAMLPACKS[] =
    Z3
    batteries
    oUnit

OCAMLINCLUDES[] =
    ../poly 
    ../constraints
    ../parser

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAML_LIBS[] =
    ../poly/poly
    ../constraints/constraints
    ../parser/poly_parser    
    ../parser/poly_constraint_parser    

TESTS[] =
    PolynomialsTest
    PolynomialConstraintsTest

OCamlProgram(PolynomialsTest, Mocks PolynomialsTest)
OCamlProgram(PolynomialConstraintsTest, Mocks PolynomialConstraintsTest)

.DEFAULT: $(TESTS)
    ./PolynomialsTest
    ./PolynomialConstraintsTest

clean:
  rm -f \
     *.omc \
     $(filter-proper-targets $(glob $(addsuffix .*, $(TESTS)))) \
     $(TESTS) \
     *~ \
     *.log \
     *.cache
